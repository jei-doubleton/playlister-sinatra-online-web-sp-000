<h1>Create a New Song</h1>
<form action="/songs" method="post">
  <input type="hidden" name="_method" value="patch">
  <p><label for="Name">Name: </label>
  <input type="text" name="song[name]" id="Name" value="<%= @song.name %>"></p>
  <p><label for="artist">Artist Name: </label>
  <input type="text" name="artist[name]" id="artist" value="<%= @song.artist.name %>"></p>
  <p><label for="genre">Genre: </label>
  <% Genre.all.each do |genre| %>
    <input type="checkbox" name="genre[name]" value="<%= genre.name %>" id="<%= genre.name %>"><%= genre.name %></input>
  <% end %></p>
  <input type="submit" name="Create" id="Create">
</form>
